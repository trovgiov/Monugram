<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="default" extends="struts-default" namespace="/">
        <action name="HelloWorld" class="it.uniclam.HelloWorld">
            <result name="SUCCESS">/success.jsp</result>
            <result name="error">/error/error.jsp</result>
        </action>



        <action name="register" class="it.uniclam.action.RegisterAction">
            <result name="success">/register-success.jsp</result>
            <result name="error">/error/register-error.jsp</result>
            <result name="insert_error">/error/register-error_mail.jsp</result>
            <result name="input">register.jsp</result>
        </action>

        <action name="login">
            <result>/login.jsp</result>
        </action>


        <action name="loginprocess" class="it.uniclam.action.Login">
            <result name="success">/loginsuccess.jsp</result>
            <result name="log_error">login.jsp</result>
            <result name="input">login.jsp</result>
        </action>


        <action name="facebook_login" class="it.uniclam.action.FacebookLogin">
            <result name="SUCCESS">/loginsuccess.jsp</result>
            <result name="no_mail">/no_email.jsp</result>
        </action>

        <action name="register_mail" class="it.uniclam.action.RegisterMail">
            <result name="SUCCESS">/loginsuccess.jsp</result>
        </action>

        <action name="sendemail" class="it.uniclam.mail.SendMail">
            <result name="success">success_mail.jsp</result>
            <result name="input">mail.jsp</result>
            <result name="error">error_mail.jsp</result>
        </action>

        <action name="back" class="it.uniclam.mail.Back">
            <result>mail.jsp</result>
        </action>

        <action name="uploadPhoto" class="it.uniclam.action.UploadAction">
            <result name="SUCCESS">upload.jsp</result>
        </action>


        <action name="userImage" class="it.uniclam.upload.FileUploadAction">
        <interceptor-ref name="fileUpload">
            <param name="maximumSize">2097152</param>

            <param name="allowedTypes">
                image/png,image/gif,image/jpeg,image/pjpeg
            </param>
        </interceptor-ref>
        <interceptor-ref name="defaultStack"></interceptor-ref>
        <result name="success">successPhoto.jsp</result>
        <result name="input">message.jsp</result>

        </action>
    </package>
</struts>
